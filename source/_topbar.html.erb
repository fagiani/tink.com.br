<header class="topbar">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-dark">

      <% link_to '/', :class => "navbar-brand" do %>
       <%= image_tag 'logo.png', :alt => "Logo", :class => "brand-logo" %>
      <% end %>

      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#topbar-primary-nav" aria-controls="topbar-primary-nav" aria-expanded="false" aria-label="Toggle navigation">
        <i class="far fa-bars"></i>
        <%= t(:menu, default: "Menu") %>
      </button>

      <div class="collapse navbar-collapse" id="topbar-primary-nav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item <%= "active" if nav_active("index.html") %>">
            <%= link_to t(:home, default: "Home"), '/', :class => 'nav-link' %>
          </li>
          <li class="nav-item <%= "active" if nav_active("solutions.html") %>">
            <%= link_to t(:solutions, default: "Soluções"), '/solutions', :class => 'nav-link' %>
          </li>
          <li class="nav-item <%= "active" if nav_active("clients.html") %>">
            <%= link_to t(:clients, default: "Clientes"), '/clients', :class => 'nav-link' %>
          </li>
          <li class="nav-item <%= "active" if nav_active("contact.html") %>">
            <%= link_to t(:contact, default: "Contato"), '/contact', :class => 'nav-link' %>
          </li>
        </ul>
      </div>

    </nav>

  </div>
</header>
